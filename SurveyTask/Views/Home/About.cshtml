@model IEnumerable<SurveyTask.ViewModel.Surveycount>

@{
    ViewBag.Title = " ";
}
<body>

    <h2>@ViewBag.Title</h2>
    <div class="panel panel-default">
        <div class="panel-heading">
        </div>

        @if (Model.Count() > 0)
        {
            <table class="table">
                <tr>
                    <th>
                        Age
                    </th>
                    <th>
                        Customer
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @item.CustomerCount
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            @: <div class="text-muted">&nbsp;No survey found.</div>
        }
        <div class="panel-footer">
            <p class="box-title"><b>Available surveys @String.Format("{0 : dddd, MMMM d, yyyy}", DateTime.Now)  : </b><span class="label label-primary">@Model.Count()</span></p>
        </div>
    </div>
    </body>